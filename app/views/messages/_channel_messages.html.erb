<% channel.messages.each do |message| %>
  <div class="chat chat-start flex flex-col">
    <div class="flex">
      <h1 class="chat-header mr-2 text-white"><%= message.user.username %></h1>
      <time class="text-xs text-white"><%= message.created_at.strftime("%H:%M") %></time>
    </div>
    <div class="chat-bubble"><%= message.content %></div>
  </div>
<% end %>
<%= form_with model: Message.new, url: messages_create_path, remote: true do |f| %>
  <%= f.hidden_field :user_id ,value: current_user.id %>
  <%= f.hidden_field :channel_id, value: channel.id %>
  <%= f.text_field :content %>
  <%= f.submit "➡️" %>
<% end %>